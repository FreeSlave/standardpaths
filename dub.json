{
    "name" : "standardpaths", 
    "description" : "Library for getting standard paths", 
    "license" : "BSL-1.0", 
    "authors" : ["Roman Chistokhodov"], 

    "targetName" : "standardpaths", 
    "targetPath" : "lib", 
    "targetType" : "library",

    "subPackages" : ["./examples/printdirs", "./examples/findexecutable"],
    
    "dependencies" : {
        "xdgpaths" : "~>0.1.3"
    },
    
    "configurations" : [
        {
            "name" : "default",
            "versions-windows":["LinkedShell32", "LinkedAdvApi"]
        },
        {
            "name" : "linkedshell32",
            "versions-windows":["LinkedShell32", "LinkedAdvApi"],
            "platforms" : ["windows"]
        }
    ],
    
    "buildTypes" : {
        "docs" : {
            "buildOptions" : ["syntaxOnly"],
            "dflags": ["-c", "-Dddocs"],
            "versions" : ["StandardPathsDocs"]
        },
        "ddox" : {
            "buildOptions" : ["syntaxOnly"],
            "dflags": ["-c", "-Df__dummy.html", "-Xfdocs.json"],
            "versions" : ["StandardPathsDocs"]
        }
    }
}
